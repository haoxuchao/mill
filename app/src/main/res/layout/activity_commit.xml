<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="提交订单"
        app:titleSize="18sp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/address_c"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:0.25"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        android:background="@drawable/bg_white_r_5"
        android:layout_margin="@dimen/space_30"
        >
        <TextView
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:paddingRight="@dimen/space_20"
            android:drawableRight="@mipmap/right_ic"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="address_user_name,address_user_phone,address_detail"
            />
        <TextView
            android:id="@+id/address_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丁海寅"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="@dimen/space_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/address_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16435870000"
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            android:layout_margin="@dimen/space_30"
            app:layout_constraintLeft_toRightOf="@+id/address_user_name"
            app:layout_constraintTop_toTopOf="@+id/address_user_name"
            app:layout_constraintBottom_toBottomOf="@+id/address_user_name"/>
        <TextView
            android:id="@+id/address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="陕西省西安市浐灞区大家我就第三等级司机都会低 档次大家送301号"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_30"
            app:layout_constraintTop_toBottomOf="@+id/address_user_name"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/space_30"
        app:layout_constraintTop_toBottomOf="@+id/address_c"
        app:layout_constraintBottom_toTopOf="@+id/bottom_c">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_white_r_5"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/goods_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_commit"
                tools:itemCount="5"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/xiaoji_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_80"
                android:text="共2件商品，总计："
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingLeft="@dimen/space_32"
                app:layout_constraintTop_toBottomOf="@+id/goods_recycle"/>
            <TextView
                android:id="@+id/xiao_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60EB"
                android:textColor="#E81F4E"
                app:layout_constraintTop_toTopOf="@+id/xiaoji_tv"
                app:layout_constraintLeft_toRightOf="@+id/xiaoji_tv"
                app:layout_constraintBottom_toBottomOf="@+id/xiaoji_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_c"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/pay_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_64"
            android:text="立即支付"
            android:textSize="15sp"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30"
            android:background="@drawable/btn_login_bg_select"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/space_30"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cars_prompt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件，合计："
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/space_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pay_btn"
            app:layout_constraintBottom_toBottomOf="@+id/pay_btn"/>
        <TextView
            android:id="@+id/sum_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="98EB"
            android:textSize="@dimen/sp_16"
            android:textColor="#E81F4E"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/space_30"
            app:layout_constraintRight_toLeftOf="@+id/pay_btn"
            app:layout_constraintLeft_toRightOf="@+id/cars_prompt_tv"
            app:layout_constraintTop_toTopOf="@+id/pay_btn"
            app:layout_constraintBottom_toBottomOf="@+id/pay_btn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
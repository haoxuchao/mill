<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_r_5"
    android:paddingBottom="@dimen/space_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_340"
        android:scaleType="fitXY"
        android:src="@mipmap/pci_1"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/ran_out_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_44"
        android:background="@drawable/goods_ran_out"
        android:text="售完"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="倩碧无油黄油面霜 倩碧无油黄油面霜倩碧无油黄油面霜倩碧无油黄油面霜倩碧无油黄油面霜"
        android:textSize="@dimen/sp_14"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_img" />

    <TextView
        android:id="@+id/goods_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="45(EB)"
        android:gravity="right"
        android:layout_marginTop="@dimen/space_32"
        android:textColor="#E81F4E"
        android:textSize="@dimen/sp_16"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginRight="@dimen/space_16"
        app:layout_constraintLeft_toRightOf="@+id/goods_adv_false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_name"/>
    <TextView
        android:id="@+id/goods_adv_false"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_44"
        android:background="@drawable/bg_adv_btn"
        android:text="为他代言"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:drawableLeft="@mipmap/m_goods_lb"
        android:drawablePadding="@dimen/space_10"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/goods_name"
        app:layout_constraintTop_toTopOf="@+id/goods_price"
        app:layout_constraintBottom_toBottomOf="@+id/goods_price"/>
    <TextView
        android:id="@+id/goods_adv_true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_44"
        android:background="@drawable/bg_adv_true"
        android:text="已代言"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:visibility="gone"
        android:drawablePadding="@dimen/space_10"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:textColor="#666"
        app:layout_constraintLeft_toLeftOf="@+id/goods_name"
        app:layout_constraintTop_toTopOf="@+id/goods_price"
        app:layout_constraintBottom_toBottomOf="@+id/goods_price"/>
    <TextView
        android:id="@+id/goods_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_80"
        android:text="编辑"
        android:visibility="gone"
        android:textSize="@dimen/sp_14"
        android:textColor="#666"
        android:layout_marginTop="@dimen/space_20"
        app:layout_constraintTop_toBottomOf="@+id/goods_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/goods_del"
        android:gravity="center"/>
    <TextView
        android:id="@+id/goods_del"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_80"
        android:text="删除"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="#666"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/goods_et"
        app:layout_constraintLeft_toRightOf="@+id/goods_et"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_110"
    android:layout_marginRight="@dimen/space_110"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_r_5">
    <TextView
        android:id="@+id/way_bill_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运单编号"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/space_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/edit_way_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:layout_marginTop="@dimen/space_34"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:background="@drawable/edit_gray_fa_r30"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginRight="@dimen/space_24"
        app:layout_constraintTop_toBottomOf="@+id/way_bill_tv"/>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_88"
        android:text="取消"
        android:gravity="center"
        android:textColor="#666"
        android:layout_marginTop="@dimen/space_28"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/confirm"
        app:layout_constraintTop_toBottomOf="@+id/edit_way_bill"
        />
    <TextView
        android:id="@+id/confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_88"
        android:text="提交"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="#2290DC"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cancel"
        app:layout_constraintTop_toTopOf="@+id/cancel"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="商品发布"
        app:titleSize="18sp"
        app:rightTitle="取消"
        app:rightColor="#666"
        app:rightSize="@dimen/sp_14"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_300"
                android:layout_marginTop="@dimen/space_20"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/goods_m_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_32"
                android:layout_marginTop="@dimen/space_28"
                android:text="商品描述"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="@+id/view_1"
                app:layout_constraintTop_toTopOf="@+id/view_1" />

            <EditText
                android:id="@+id/et_goods_m"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/space_32"
                android:layout_marginTop="@dimen/space_22"
                android:layout_marginRight="@dimen/space_32"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left|top"
                android:hint="请对商品进行详细描述..."
                android:maxLines="4"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/view_1"
                app:layout_constraintTop_toBottomOf="@+id/goods_m_tv" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/img_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_20"
                app:layout_constraintTop_toBottomOf="@+id/view_1"
                android:background="@color/white"
                android:layout_marginTop="@dimen/space_20">
                <TextView
                    android:id="@+id/goods_photo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_80"
                    android:text="商品图片"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_32"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/goods_img_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_24"
                    android:layout_marginLeft="@dimen/space_24"
                    app:layout_constraintTop_toBottomOf="@+id/goods_photo_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/goods_price_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_90"
                android:background="@color/white"
                android:text="商品价格"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_32"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/space_20"
                app:layout_constraintTop_toBottomOf="@+id/img_c"/>
            <EditText
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:maxWidth="@dimen/space_300"
                android:ellipsize="end"
                android:inputType="numberDecimal"
                android:hint="0"
                android:background="@null"
                android:layout_marginRight="@dimen/space_20"
                app:layout_constraintTop_toTopOf="@+id/goods_price_tv"
                app:layout_constraintBottom_toBottomOf="@+id/goods_price_tv"
                app:layout_constraintRight_toLeftOf="@+id/price_prompt" />
            <TextView
                android:id="@+id/price_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(EB)"
                android:textColor="#E81F4E"
                android:layout_marginRight="@dimen/space_32"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/goods_price_tv"
                app:layout_constraintBottom_toBottomOf="@+id/goods_price_tv"/>
            <TextView
                android:id="@+id/tvnum"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_90"
                android:text="商品数量"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/space_20"
                android:paddingLeft="@dimen/space_32"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/goods_price_tv"
                app:layout_constraintLeft_toLeftOf="@+id/price_tv"/>
            <ImageView
                android:id="@+id/jia_btn"
                android:layout_width="@dimen/space_44"
                android:layout_height="@dimen/space_40"
                android:src="@mipmap/jia_icon"
                app:layout_constraintTop_toTopOf="@+id/tvnum"
                app:layout_constraintRight_toRightOf="@+id/price_prompt"
                app:layout_constraintBottom_toBottomOf="@+id/tvnum"/>
            <ImageView
                android:id="@+id/jian_btn"
                android:layout_width="@dimen/space_44"
                android:layout_height="@dimen/space_40"
                android:src="@mipmap/jian_icon"
                app:layout_constraintTop_toTopOf="@+id/tvnum"
                app:layout_constraintRight_toLeftOf="@+id/num_tv"
                app:layout_constraintBottom_toBottomOf="@+id/tvnum"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/space_2"
                android:background="@color/black10"
                app:layout_constraintLeft_toLeftOf="@+id/num_tv"
                app:layout_constraintTop_toTopOf="@+id/num_tv"
                app:layout_constraintRight_toRightOf="@+id/num_tv"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/space_2"
                android:background="@color/black10"
                app:layout_constraintLeft_toLeftOf="@+id/num_tv"
                app:layout_constraintBottom_toBottomOf="@+id/num_tv"
                app:layout_constraintRight_toRightOf="@+id/num_tv"/>
            <TextView
                android:id="@+id/num_tv"
                android:layout_width="@dimen/space_70"
                android:layout_height="@dimen/space_40"
                android:text="1"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/jia_btn"
                app:layout_constraintRight_toLeftOf="@+id/jia_btn"/>
            <TextView
                android:id="@+id/push_goods_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_88"
                android:text="发布"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/space_164"
                android:background="@drawable/btn_login_bg_select"
                app:layout_constraintTop_toBottomOf="@+id/tvnum"
                android:layout_marginLeft="@dimen/space_32"
                android:layout_marginRight="@dimen/space_32"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_r_5"
    android:elevation="@dimen/space_2"
    android:layout_marginTop="@dimen/space_30"
    android:layout_marginLeft="@dimen/space_30"
    android:layout_marginRight="@dimen/space_30">
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recycle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/prompt1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_80"
        android:text="共0件商品，总计："
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/space_26"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycle"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/b_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30EB"
        android:textSize="@dimen/sp_14"
        android:textColor="#E81E4E"
        app:layout_constraintTop_toTopOf="@+id/prompt1"
        app:layout_constraintBottom_toBottomOf="@+id/prompt1"
        app:layout_constraintLeft_toRightOf="@+id/prompt1"
        />
    <TextView
        android:id="@+id/the_end_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已收货"
        android:textSize="@dimen/sp_12"
        android:textColor="#666"
        android:visibility="gone"
        android:layout_marginRight="@dimen/space_30"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycle"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_64"
        app:layout_constraintRight_toLeftOf="@+id/the_end_tv"
        android:text="确认收货"
        android:textColor="#218FDC"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="@dimen/space_30"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        app:layout_constraintTop_toBottomOf="@+id/recycle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shopcar_delete_bg"/>
    <TextView
        android:id="@+id/confirm_send"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_64"
        app:layout_constraintRight_toLeftOf="@+id/confirm"
        android:text="确认发货"
        android:textColor="#218FDC"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="@dimen/space_30"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        app:layout_constraintTop_toBottomOf="@+id/recycle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shopcar_delete_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_240"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/space_20"
    android:layout_marginLeft="@dimen/space_30"
    android:layout_marginRight="@dimen/space_30"
    android:background="@drawable/bg_white_r_5">
    <TextView
        android:id="@+id/qi_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_60"
        android:text="启用"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/btn_login_bg_select"
        android:gravity="center"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/space_30"
        app:layout_constraintBottom_toBottomOf="@+id/name"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分红矿机"
        android:drawableRight="@mipmap/red_pakege"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:drawablePadding="@dimen/space_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/space_38"/>
    <TextView
        android:id="@+id/chan_red_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所产分红:"
        android:layout_marginTop="@dimen/space_20"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintBottom_toTopOf="@+id/tiao_tv"
        app:layout_constraintLeft_toLeftOf="@+id/name"/>
    <TextView
        android:id="@+id/chan_red_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="66CNY"
        android:textColor="#E2383C"
        app:layout_constraintLeft_toRightOf="@+id/chan_red_tv"
        app:layout_constraintBottom_toBottomOf="@+id/chan_red_tv"/>
    <TextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="型号:小型"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/chan_red_tv"
        android:layout_marginRight="@dimen/space_30"/>
    <TextView
        android:id="@+id/tiao_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="条件：待释放EB不低于200"
        android:textSize="15sp"
        android:textColor="#666"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/chan_red_price"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
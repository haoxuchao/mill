<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="商家中心"
        app:titleSize="18sp"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_220"
                        android:layout_weight="2"
                        android:layout_marginRight="@dimen/space_14"
                        android:elevation="@dimen/space_2"
                        android:background="@drawable/bg_white_r_5"
                        android:layout_marginTop="@dimen/space_30"
                        android:layout_marginLeft="@dimen/space_30"
                        >
                        <TextView
                            android:id="@+id/m_order_tvm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单管理"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/space_22"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/order_yf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已付款"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@+id/m_order_tvm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/order_all"
                            android:drawablePadding="@dimen/space_20"
                            android:drawableTop="@mipmap/m_order_yf"/>
                        <TextView
                            android:id="@+id/order_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部订单"
                            android:textSize="13sp"
                            app:layout_constraintLeft_toRightOf="@+id/order_yf"
                            app:layout_constraintTop_toBottomOf="@+id/m_order_tvm"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:drawablePadding="@dimen/space_20"
                            android:drawableTop="@mipmap/m_order_yf"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_220"
                        android:layout_weight="1"
                        android:elevation="@dimen/space_2"
                        android:background="@drawable/bg_white_r_5"
                        android:layout_marginLeft="@dimen/sp_14"
                        android:layout_marginTop="@dimen/space_30"
                        android:layout_marginRight="@dimen/space_30"
                        >
                        <TextView
                            android:id="@+id/tv_push"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="@dimen/space_24"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:id="@+id/add_goods"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新增商品"
                            android:textSize="13sp"
                            android:drawablePadding="@dimen/space_20"
                            app:layout_constraintTop_toBottomOf="@+id/tv_push"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:drawableTop="@mipmap/m_order_fabu"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/mine_goods_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_100"
                    android:text="我的商品"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/space_30"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/space_20"
                    app:layout_constraintTop_toBottomOf="@+id/line1"/>
                <TextView
                    android:id="@+id/m_mine_goods"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:text="商品管理"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/space_30"
                    android:paddingTop="@dimen/space_20"
                    android:layout_height="@dimen/space_100"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mine_goods_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/mine_goods_tv"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/m_order_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/mine_goods_tv"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
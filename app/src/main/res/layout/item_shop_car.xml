<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_240"
        android:background="@drawable/bg_white_r_5"
        android:elevation="@dimen/space_2"
        android:layout_margin="@dimen/space_30"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="@dimen/space_180"
            android:layout_height="@dimen/space_180"
            android:src="@mipmap/pci_1"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/space_70"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shop_cart_selector"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/goods_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/goods_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/goods_img"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_24"
            android:text="倩碧镭射淡斑精华【27天见证美 白功效】还你美白蛋肌"
            app:layout_constraintTop_toTopOf="@+id/goods_img"/>
        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30EB"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/goods_img"
            app:layout_constraintLeft_toLeftOf="@+id/goods_name"
            android:textColor="#E81F4E"/>
        <ImageView
            android:id="@+id/jia_btn"
            android:layout_width="@dimen/space_44"
            android:layout_height="@dimen/space_40"
            android:src="@mipmap/jia_icon"
            app:layout_constraintRight_toRightOf="@+id/goods_name"
            app:layout_constraintBottom_toBottomOf="@+id/goods_price"/><ImageView
            android:id="@+id/jian_btn"
            android:layout_width="@dimen/space_44"
            android:layout_height="@dimen/space_40"
            android:src="@mipmap/jian_icon"
            app:layout_constraintRight_toLeftOf="@+id/num_tv"
            app:layout_constraintBottom_toBottomOf="@+id/goods_price"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/space_2"
            android:background="@color/black10"
            app:layout_constraintLeft_toLeftOf="@+id/num_tv"
            app:layout_constraintTop_toTopOf="@+id/num_tv"
            app:layout_constraintRight_toRightOf="@+id/num_tv"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/space_2"
            android:background="@color/black10"
            app:layout_constraintLeft_toLeftOf="@+id/num_tv"
            app:layout_constraintBottom_toBottomOf="@+id/num_tv"
            app:layout_constraintRight_toRightOf="@+id/num_tv"/>
        <TextView
            android:id="@+id/num_tv"
            android:layout_width="@dimen/space_70"
            android:layout_height="@dimen/space_40"
            android:text="1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/jia_btn"
            app:layout_constraintRight_toLeftOf="@+id/jia_btn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="我的团队"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/top_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_210"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/space_30"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@mipmap/team_top_bg"/>
                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/space_140"
                    android:layout_height="@dimen/space_140"
                    android:src="@color/gray"
                    app:layout_constraintTop_toTopOf="@+id/top_view"
                    app:layout_constraintLeft_toLeftOf="@+id/top_view"
                    android:layout_margin="@dimen/space_30"
                    />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在下坂本"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/space_12"
                    app:layout_constraintTop_toTopOf="@+id/user_img"
                    app:layout_constraintBottom_toTopOf="@+id/real_status"
                    app:layout_constraintLeft_toRightOf="@+id/user_img"/>
                <TextView
                    android:id="@+id/real_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已实名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/user_img"
                    app:layout_constraintLeft_toLeftOf="@+id/user_name"
                    app:layout_constraintTop_toBottomOf="@+id/user_name"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/team_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:0.37"
                    android:background="@drawable/bg_white_r_5"
                    android:layout_margin="@dimen/space_30"
                    app:layout_constraintTop_toBottomOf="@+id/top_view">
                    <TextView
                        android:id="@+id/info_huo"
                        android:layout_width="@dimen/space_150"
                        android:layout_height="@dimen/space_150"
                        android:text="在线活跃度\n 300"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/space_26"
                        android:background="@drawable/team_info_bg_r"
                        app:layout_constraintRight_toLeftOf="@+id/info_pp_num"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:id="@+id/sum_huo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总活跃度：300"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/space_30"
                        app:layout_constraintTop_toBottomOf="@+id/info_huo"
                        app:layout_constraintLeft_toLeftOf="@+id/info_huo"/>
                    <TextView
                        android:id="@+id/info_pp_num"
                        android:layout_width="@dimen/space_150"
                        android:layout_height="@dimen/space_150"
                        android:text="总人数\n 300"
                        android:gravity="center"
                        app:layout_constraintLeft_toRightOf="@+id/info_huo"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/space_26"
                        android:background="@drawable/team_info_bg_r"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:id="@+id/sum_pp_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总人数：300"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/space_30"
                        app:layout_constraintTop_toBottomOf="@+id/info_pp_num"
                        app:layout_constraintLeft_toLeftOf="@+id/info_pp_num"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space_32"
                    android:layout_margin="@dimen/space_30"
                    tools:itemCount="3"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_myteam"
                    app:layout_constraintTop_toBottomOf="@+id/team_info"
                    android:background="@drawable/bg_white_r_5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
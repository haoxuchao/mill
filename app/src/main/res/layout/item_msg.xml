<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_156"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <View
        android:id="@+id/view_b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginRight="@dimen/space_50"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black10"/>
    <ImageView
        android:id="@+id/msg_icon"
        android:layout_width="@dimen/space_76"
        android:layout_height="@dimen/space_76"
        app:layout_constraintLeft_toLeftOf="@+id/view_b"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/space_14"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/msg_ic"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统通知"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/space_38"
        android:layout_marginTop="@dimen/space_38"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/msg_icon"/>
    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你的账号已成功激活"
        android:textSize="@dimen/sp_12"
        android:textColor="#999"
        android:layout_marginBottom="@dimen/space_38"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:textSize="@dimen/sp_12"
        android:textColor="#999"
        android:layout_marginRight="@dimen/space_30"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"/>



</androidx.constraintlayout.widget.ConstraintLayout>
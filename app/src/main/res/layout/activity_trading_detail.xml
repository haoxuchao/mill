<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="订单详情"
        app:titleSize="18sp"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/c_view1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r_5"
        android:layout_margin="@dimen/space_30"
        android:paddingTop="@dimen/space_20"
        android:paddingBottom="@dimen/space_20"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">
        <TextView
            android:id="@+id/ask_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="求购数量：1-50"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/price_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="求购单价：10.0 CNY"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/c_view2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r_5"
        android:layout_margin="@dimen/space_30"
        android:paddingTop="@dimen/space_20"
        android:paddingBottom="@dimen/space_20"
        app:layout_constraintTop_toBottomOf="@+id/c_view1">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="出售人：嘻嘻嘻"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/shou_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="出售数量：10"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/sum_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="共计：100 CNY"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/c_view3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r_5"
        android:layout_margin="@dimen/space_30"
        android:paddingTop="@dimen/space_20"
        android:paddingBottom="@dimen/space_20"
        app:layout_constraintTop_toBottomOf="@+id/c_view2">
        <TextView
            android:id="@+id/order_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="订单信息"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="订单编号：03995626"
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            />
        <TextView
            android:id="@+id/order_ctime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="创建时间：2020-09-22 13:35:00"
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            />
        <TextView
            android:id="@+id/order_ptime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="付款时间：2020-09-22 13:35:00"
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            />
        <TextView
            android:id="@+id/order_push_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_24"
            android:text="发布时间：2020-09-22 "
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
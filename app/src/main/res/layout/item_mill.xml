<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_240"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/space_20"
    android:layout_marginLeft="@dimen/space_30"
    android:layout_marginRight="@dimen/space_30"
    android:background="@drawable/bg_white_r_5">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微矿"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/space_38"/>
    <TextView
        android:id="@+id/dui_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="兑换:"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintBottom_toTopOf="@+id/chan_tv"
        app:layout_constraintTop_toBottomOf="@+id/name"/>
    <TextView
        android:id="@+id/dui_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/dui_tv"
        android:textColor="#E2383C"
        android:text="66EB"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintRight_toLeftOf="@+id/time"
        app:layout_constraintBottom_toBottomOf="@+id/dui_tv"/>
    <TextView
        android:id="@+id/chan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="产量: "
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/dui_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/chan_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/chan_tv"
        android:textColor="#E2383C"
        android:text="66EB"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintRight_toLeftOf="@+id/ctime"
        app:layout_constraintBottom_toBottomOf="@+id/chan_tv"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间：180天"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/space_238"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/dui_tv"/>
    <TextView
        android:id="@+id/ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期：2020.9.30-2020.10.30"
        android:textSize="@dimen/sp_14"
        android:textColor="#666"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/space_238"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/chan_tv"/>
    <TextView
        android:id="@+id/buy_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_60"
        android:text="购买"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/btn_login_bg_select"
        android:gravity="center"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/space_30"
        app:layout_constraintBottom_toBottomOf="@+id/name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
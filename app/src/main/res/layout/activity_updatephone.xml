<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="手机号"
        app:titleSize="18sp"
        app:lineColor="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号已绑定"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginTop="@dimen/space_60"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="378429"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/space_50"
        app:layout_constraintLeft_toLeftOf="@+id/prompt"
        app:layout_constraintTop_toBottomOf="@+id/prompt"/>
    <TextView
        android:id="@+id/update_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_88"
        android:layout_marginLeft="@dimen/space_76"
        android:layout_marginRight="@dimen/space_76"
        android:layout_marginTop="@dimen/space_120"
        android:text="更换手机号"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_login_bg_select"
        app:layout_constraintTop_toBottomOf="@+id/phone_tv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>